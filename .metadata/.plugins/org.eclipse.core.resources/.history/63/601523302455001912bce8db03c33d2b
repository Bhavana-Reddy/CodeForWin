
public class BubbleSortAlg {
	public static void swap(int ar[],int i,int j){
		int temp =0;
		temp = ar[j];
		 ar[j] = ar[i];
		 ar[i] = temp;
		
		
		
	}
	public void bubbleSortAlg(int ar[]) {
	for(int unsortedIndex=ar.length-1;unsortedIndex>0;unsortedIndex--) {
		for(int i=0;i<unsortedIndex;i++) {
			if(ar[i]>ar[i+1]) {
				swap(ar,i,i+1);
			}
		}
	}
	}

}
